{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Valorant Spotify Companion",
    "version": "0.1.0",
    "minimum-overwolf-version": "0.187.0",
    "author": "Starter",
  "icon": "./icons/app.png",
    "description": "Audio-only Valorant companion reacting to Overwolf GEP events with Spotify playback."
  },
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "index.html",
        "transparent": true,
        "resizable": false,
        "show_in_taskbar": false,
        "allow_right_click": false
      },
      "control": {
        "file": "ui.html",
        "transparent": false,
        "resizable": true,
        "show_in_taskbar": true,
        "size": { "width": 900, "height": 680 },
        "start_position": { "top": 120, "left": 120 }
      }
    }
  },
  "hotkeys": {
    "toggle_control": {
      "title": "Toggle Control Window",
      "action": {
        "type": "toggle",
        "name": "control"
      },
      "default": "Ctrl+Shift+U"
    }
  },
  "permissions": [
    "GameEvents",
    "GameInfo"
  ],
  "game_targeting": {
    "type": "dedicated",
    "game_ids": [7764]
  }
}
